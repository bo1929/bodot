# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
fn - t : yabai -m space --create && \
                  index="$(yabai -m query --spaces --display | jq 'map(select(."is-native-fullscreen" == false))[-1].index')" && \
                  yabai -m window --space "${index}" && \
                  yabai -m space --focus "${index}"

# destroy desktop
fn - w : yabai -m space --focus prev && yabai -m space recent --destroy

# fast focus desktop
fn - tab : yabai -m space --focus recent

# focus window
fn - h : yabai -m window --focus west
fn - l : yabai -m window --focus east
fn - k : yabai -m window --focus north
fn - j : yabai -m window --focus south

# window size
alt + fn - j : yabai -m window --resize bottom:0:20
alt + fn - k : yabai -m window --resize top:0:-20
alt + fn - l : yabai -m window --resize right:20:0
alt + fn - h : yabai -m window --resize left:-20:0

# toggle window zoom
alt + fn - d : yabai -m window --toggle zoom-parent
alt + fn - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
alt + fn - e : yabai -m window --toggle split

# float / unfloat window and center on screen
alt + fn - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# toggle sticky(+float), topmost, picture-in-picture
alt + fn - p : yabai -m window --toggle sticky --toggle topmost --toggle pip

# cycle colorscheme
alt + fn - f3 : ${HOME}/.config/alacritty/cycle_colorschemes.py
